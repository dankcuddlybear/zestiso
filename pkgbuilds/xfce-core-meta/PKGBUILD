# Maintainer: Dankcuddlybear <dankcuddlybear@proton.me>
pkgname=xfce-core-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='XFCE barebones desktop - all-in-one package (only desktop and file manager)'
arch=(any)
url='https://github.com/dankcuddlybear/pkgbuilds'
install=install.install
depends=(
	adwaita-qt5
	adwaita-qt6
	blueman
	gnu-free-fonts
	gvfs-meta
	lightdm-gtk-greeter
	menulibre
	mugshot
	network-manager-applet
	pavucontrol
	qt5ct
	qt6ct
	thunar
	thunar-archive-plugin
	thunar-media-tags-plugin
	thunar-volman
	# Thumbnails
	tumbler ffmpegthumbnailer freetype2 libgepub libgsf libopenraw poppler-glib
	xdg-desktop-portal-gtk
	xdg-desktop-portal-xapp
	xfce4-panel
	xfce4-power-manager
	xfce4-pulseaudio-plugin
	xfce4-screensaver
	xfce4-session
	xfce4-settings
	xfdesktop
	xfwm4
)
package() {
	cp -r "$srcdir/../files/etc" "$pkgdir"
	"$srcdir/../../set-default-permissions.sh" "$pkgdir"
}
