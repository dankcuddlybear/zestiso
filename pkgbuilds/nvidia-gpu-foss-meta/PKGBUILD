pkgname=nvidia-gpu-foss-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Open source Mesa Nouveau Nvidia GPU drivers'
arch=(x86_64)
url='https://github.com/dankcuddlybear/zestiso'
conflicts=('nvidia-gpu-pro-340xx-meta' 'nvidia-gpu-pro-390xx-meta' 'nvidia-gpu-pro-470xx-meta' 'nvidia-gpu-pro-525xx-meta' 'nvidia-gpu-pro-meta')
depends=(
	libva-mesa-driver lib32-libva-mesa-driver
	linux-firmware
	mesa lib32-mesa
	mesa-vdpau lib32-mesa-vdpau
	opencl-clover-mesa lib32-opencl-clover-mesa
	opencl-rusticl-mesa lib32-opencl-rusticl-mesa
	vulkan-icd-loader lib32-vulkan-icd-loader
	vulkan-mesa-layers lib32-vulkan-mesa-layers
	vulkan-nouveau lib32-vulkan-nouveau
)
install=install.install
