# Maintainer: Dankcuddlybear <dankcuddlybear@proton.me>
pkgname=gvfs-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Support for virtual filesystems in applications using GVFS - all-in-one package'
arch=(any)
url='https://github.com/dankcuddlybear/pkgbuilds'
depends=(
	gvfs-afc	
	gvfs-dnssd	
	gvfs-goa
	gvfs-google
	gvfs-gphoto2
	gvfs-mtp
	gvfs-nfs
	gvfs-onedrive
	gvfs-smb
	gvfs-wsdd
)
