# Maintainer: Dankcuddlybear <dankcuddlybear@proton.me>
pkgname=linux-utilities-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Useful Linux utilities - all-in-one package'
arch=(any)
url='https://github.com/dankcuddlybear/pkgbuilds'
depends=(
	bash-completion
	ddrescue
	dmidecode
	hdparm
	gptfdisk
	lsscsi
	man-db
	man-pages
	polkit
	sudo
	stress
	texinfo
	usbutils
)
