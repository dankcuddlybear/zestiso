pkgname=nvidia-gpu-pro-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Proprietary Nvidia GPU drivers (for Maxwell GPUs and newer)'
arch=(x86_64)
url='https://github.com/dankcuddlybear/zestiso'
conflicts=('nvidia-gpu-foss-meta' 'nvidia-gpu-pro-340xx-meta' 'nvidia-gpu-pro-390xx-meta' 'nvidia-gpu-pro-470xx-meta' 'nvidia-gpu-pro-525xx-meta')
depends=(libxnvctrl
	nvidia-dkms
	nvidia-settings
	nvidia-utils lib32-nvidia-utils
	nvidia-prime
	ocl-icd lib32-ocl-icd
	opencl-nvidia lib32-opencl-nvidia
	vulkan-icd-loader lib32-vulkan-icd-loader
)
install=install.install
