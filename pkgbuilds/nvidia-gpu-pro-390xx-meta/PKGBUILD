pkgname=nvidia-gpu-pro-390xx-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Proprietary Nvidia GPU 390.xx drivers (for Fermi GPUs)'
arch=(x86_64)
url='https://github.com/dankcuddlybear/zestiso'
conflicts=('nvidia-gpu-foss-meta' 'nvidia-gpu-pro-340xx-meta' 'nvidia-gpu-pro-470xx-meta' 'nvidia-gpu-pro-525xx-meta' 'nvidia-gpu-pro-meta')
depends=(libxnvctrl-390xx
	nvidia-390xx-dkms
	nvidia-390xx-settings
	nvidia-390xx-utils lib32-nvidia-390xx-utils
	nvidia-prime
	ocl-icd lib32-ocl-icd
	opencl-nvidia-390xx lib32-opencl-nvidia-390xx
	vulkan-icd-loader lib32-vulkan-icd-loader
)
install=install.install
